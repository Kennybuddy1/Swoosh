<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.FinishActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/exercisebg"
            android:id="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop" android:contentDescription="@string/backround_image"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/searchLeagueTxt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6" android:textAlignment="center"
            tools:text="@string/search_league" android:textColor="@color/colorAccent"
            android:fontFamily="@font/montserrat" android:textSize="36sp" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintVertical_bias="0.434"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="130dp"
            android:layout_height="116dp"
            android:id="@+id/progressBar"
            app:layout_constraintTop_toBottomOf="@+id/searchLeagueTxt" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>