<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/welcomescreenbg"
            android:id="@+id/imageView7"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop" android:contentDescription="@string/backround_image"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView8"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView7" android:layout_marginTop="16dp"
            android:contentDescription="@string/swoosh_logo"/>
    <TextView
            android:text="@string/go_all_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:fontFamily="@font/montserrat"
            android:textSize="120sp" android:textColor="@android:color/primary_text_dark"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" android:layout_marginTop="140dp"
            android:textStyle="bold"/>
    <TextView
            android:text="@string/on_going_all_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:fontFamily="@font/montserrat"
            android:textColor="@color/colorAccent" android:textSize="50sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/textView6"
            android:layout_marginTop="120dp" android:textStyle="bold"/>
    <TextView
            android:text="@string/find_a_team_in_your_city_amp_dominate_the_league"
            android:layout_width="449dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:fontFamily="@font/montserrat"
            android:textColor="@color/colorAccent" android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="80dp"
            app:layout_constraintHorizontal_bias="0.503"/>
    <Button
            android:text="@string/get_started"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/getStartedBtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:background="@drawable/swoosh_button"
            android:textColor="@color/colorAccent" android:fontFamily="@font/montserrat" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>