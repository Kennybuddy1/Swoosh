<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LeagueActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView3" android:layout_marginTop="8dp"
            android:scaleType="fitCenter"/>
    <TextView
            android:text="Desired League:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textColor="@color/colorAccent"
            android:fontFamily="@font/montserrat" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="32dp">
        <ToggleButton
                android:text="Mens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="195dp"
                tools:layout_editor_absoluteX="105dp" android:id="@+id/toggleButton3"
                android:textOff="Mens" android:textOn="Mens" tools:background="@drawable/swoosh_toggle"
                android:textColor="@color/colorAccent" android:fontFamily="@font/montserrat"/>
        <ToggleButton
                android:text="Womens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton4" android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" android:textOff="Womens" android:textOn="Womens"
                android:textColor="@color/colorAccent" tools:background="@drawable/swoosh_toggle"
                android:fontFamily="@font/montserrat"/>
        <ToggleButton
                android:text="Co-ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton5" android:textOff="Co-ed"
                android:textOn="Co-ed" android:textColor="@color/colorAccent"
                tools:background="@drawable/swoosh_toggle" android:fontFamily="@font/montserrat"/>
    </LinearLayout>
    <Button
            android:text="Next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            android:background="@drawable/swoosh_button" android:fontFamily="@font/montserrat"
            android:textColor="@color/colorAccent" android:layout_marginBottom="16dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>